@page
@model AspNetBase.Presentation.App.Pages.ManageUsers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>User account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppUser.Uid" class="control-label"></label>
                <input asp-for="AppUser.Uid" class="form-control" disabled />
                <span asp-validation-for="AppUser.Uid" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="AppUser.Id" />
            <div class="form-group">
                <label asp-for="AppUser.UserName" class="control-label"></label>
                <input asp-for="AppUser.UserName" class="form-control" disabled />
                <span asp-validation-for="AppUser.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.Email" class="control-label"></label>
                <input asp-for="AppUser.Email" class="form-control" disabled />
                <span asp-validation-for="AppUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="AppUser.EmailConfirmed" disabled />
                        @Html.DisplayNameFor(model => model.AppUser.EmailConfirmed)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.PhoneNumber" class="control-label"></label>
                <input asp-for="AppUser.PhoneNumber" class="form-control" />
                <span asp-validation-for="AppUser.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="AppUser.PhoneNumberConfirmed" disabled />
                        @Html.DisplayNameFor(model => model.AppUser.PhoneNumberConfirmed)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="AppUser.TwoFactorEnabled" disabled />
                        @Html.DisplayNameFor(model => model.AppUser.TwoFactorEnabled)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.LockoutEnd" class="control-label"></label>
                <input asp-for="AppUser.LockoutEnd" class="form-control" />
                <span asp-validation-for="AppUser.LockoutEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="AppUser.LockoutEnabled" />
                        @Html.DisplayNameFor(model => model.AppUser.LockoutEnabled)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AppUser.AccessFailedCount" class="control-label"></label>
                <input asp-for="AppUser.AccessFailedCount" class="form-control" />
                <span asp-validation-for="AppUser.AccessFailedCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

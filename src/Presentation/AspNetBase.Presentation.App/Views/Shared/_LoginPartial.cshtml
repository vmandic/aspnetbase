@using Microsoft.AspNetCore.Identity
@using AspNetBase.Infrastructure.DataAccess.Entities.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form
      asp-area="Identity"
      asp-page="/Account/Logout"
      asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
      method="post"
      id="logoutForm">
        <ul class="navbar-nav nav-login">
            <li>
                <a class="btn btn-outline-light btn-block"
                asp-area="Identity"
                asp-page="/Account/Manage/Index"
                title="@Localizer["Manage"]">
                  @Localizer["Hello {0}!", UserManager.GetUserName(User)]
                </a>
            </li>
            <li>
                <button type="submit" class="btn btn-primary btn-block">@Localizer["Logout"]</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav nav-login">
        <li><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">@Localizer["Register"]</a></li>
        <li><a class="nav-link" asp-area="Identity" asp-page="/Account/Login">@Localizer["Login"]</a></li>
    </ul>
}

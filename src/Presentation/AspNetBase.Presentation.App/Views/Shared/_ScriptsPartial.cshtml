<script src="~/lib/mvcgrid/mvc-grid.js" asp-append-version="true"></script>
<script defer>
  (function() {
    [].forEach.call(document.getElementsByClassName('mvc-grid'), function (el) {
        new MvcGrid(el);
    });
  }());

  function gridNavButtonClick(e) {
    window.location.assign(e.getAttribute("data-nav"));
  }
</script>
